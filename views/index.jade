extends layout

block content
  
  div.row(id="container")
    img(src='/images/alienHead.png' class="center-block" style="max-width: 300px; margin-bottom: 0")
    
    div(class="center-block" style="max-width: 400px; margin-top: 0; ")
      form.input-group(id='nameInput' )
        input.form-control(id="userName" type="text"  autocomplete="off" placeholder="Input a reddit user name ...")
        span.input-group-btn
          button.btn.btn-default(id='submission' type="submit")
            i(class="fa fa-search fa-fw")
              
    div.JSON(hidden)
    br
    div.center-block#loading(style="display:none")
      img(src="/images/loading.gif" style="max-width: 75px")
      p Loading ...

    p.center-block#information
    br
    div.center-block.wordwrap.JSON

    
    p#information
    script(src="/javascripts/main.js")

             

